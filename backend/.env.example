# SafeNode Backend Environment Variables
PORT=4000
NODE_ENV=development

# API Configuration
API_URL=http://localhost:4000
HIBP_API_URL=https://api.pwnedpasswords.com
HIBP_USER_AGENT=SafeNode/0.1.0

# Security
CORS_ORIGIN=http://localhost:5173
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Database (for future use)
DATABASE_URL=postgresql://localhost:5432/safenode
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (required for billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_INDIVIDUAL=price_...
STRIPE_PRICE_FAMILY=price_...
STRIPE_PRICE_TEAMS=price_...
STRIPE_PRICE_BUSINESS=price_...

# Email (pick one provider)
RESEND_API_KEY=re_...
# SENDGRID_API_KEY=SG...
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
EMAIL_FROM=SafeNode <noreply@safe-node.app>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173
