{
  "name": "safenode-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.new.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node ./dist/src/index.new.js",
    "postinstall": "prisma generate",
    "postbuild": "",
    "predev": "node scripts/check-port.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.new.ts",
    "dev:clean": "pkill -f 'ts-node-dev' || true && npm run dev",
    "kill": "pkill -f 'ts-node-dev' || true",
    "kill:force": "pkill -9 -f 'ts-node-dev' || true",
    "status": "ps aux | grep -E 'ts-node|node.*index' | grep -v grep || echo 'No backend processes running'",
    "restart": "npm run kill && sleep 2 && npm run dev",
    "build": "npm run db:generate && tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "ts-node src/db/seed.ts",
    "seed": "ts-node src/db/seed-cli.ts",
    "reset": "ts-node src/db/seed-cli.ts --reset",
    "reset-vault": "ts-node scripts/reset-demo-vault.ts"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/client": "^5.7.1",
    "@simplewebauthn/server": "^13.2.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.25",
    "@types/qrcode": "^1.5.6",
    "argon2": "^0.41.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.3.1",
    "fastify": "^5.7.4",
    "fastify-raw-body": "^5.0.0",
    "hash-wasm": "^4.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "node-fetch": "^3.3.2",
    "otplib": "^12.0.1",
    "pino-pretty": "^10.2.3",
    "prisma": "^5.7.1",
    "qrcode": "^1.5.4",
    "stripe": "^14.21.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^8.57.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0"
  }
}
